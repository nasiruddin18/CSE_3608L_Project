<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secondpage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="#50ffffff"
        android:text="Course Tutorial"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/javaIntroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java Calculator"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_with_radius"
            android:padding="16dp" 
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/variableId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Variable"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_with_radius"
            android:padding="16dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/operatorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operator"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_with_radius"
            android:padding="16dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/ConditionalStatementId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conditional Statement"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_with_radius"
            android:padding="16dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/loopId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loop"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_with_radius"
            android:padding="16dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>






</LinearLayout>
